@page
@model NotesApp.Pages.Note.DetailsModel

@{
    ViewData["Title"] = "Note Details";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title">Note Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                <strong>@Html.DisplayNameFor(model => model.Notes.Title)</strong>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes.Title)
            </dd>

            <dt class="col-sm-3">
                <strong>@Html.DisplayNameFor(model => model.Notes.Content)</strong>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes.Content)
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Notes.Id" class="btn btn-warning">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
