@page
@model NotesApp.Pages.Note.EditModel

@{
    ViewData["Title"] = "Edit Note";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<h4>Edit Note</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <!-- Wider columns -->
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Hidden ID field -->
            <input type="hidden" asp-for="Notes.Id" />

            <!-- Title field -->
            <div class="form-group mb-3">
                <label asp-for="Notes.Title" class="form-label"></label>
                <input asp-for="Notes.Title" class="form-control" placeholder="Enter title" />
                <span asp-validation-for="Notes.Title" class="text-danger"></span>
            </div>

            <!-- Content field -->
            <div class="form-group mb-3">
                <label asp-for="Notes.Content" class="form-label"></label>
                <textarea asp-for="Notes.Content" class="form-control" placeholder="Write your note here..." rows="5"></textarea>
                <span asp-validation-for="Notes.Content" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<!-- Back Link -->
<div class="mt-3">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
