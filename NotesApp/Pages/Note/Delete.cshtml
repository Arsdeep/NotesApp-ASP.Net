@page
@model NotesApp.Pages.Note.DeleteModel

@{
    ViewData["Title"] = "Delete Note";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header text-white bg-danger">
        <h5 class="card-title mb-0">Warning: Deleting a Note</h5>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this note?</h3>
        <hr />

        <div>
            <h4>Note Details</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Notes.Title)</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes.Title)
                </dd>
                <dt class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Notes.Content)</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes.Content)
                </dd>
            </dl>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Notes.Id" />
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
